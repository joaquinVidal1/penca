<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_app">

    <TextView
        android:id="@+id/minut_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/lato"
        android:paddingVertical="13dp"
        android:text="16'"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/event_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goal_vector"
        app:layout_constraintBottom_toBottomOf="@id/minut_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/minut_event" />

    <TextView
        android:id="@+id/name_home_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/lato"
        android:text="De los Santos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/minut_event"
        app:layout_constraintEnd_toStartOf="@id/event_logo"
        app:layout_constraintTop_toTopOf="@id/minut_event" />

    <TextView
        android:id="@+id/name_away_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/lato"
        android:text="De los Santos"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/minut_event"
        app:layout_constraintStart_toEndOf="@id/event_logo"
        app:layout_constraintTop_toTopOf="@id/minut_event" />


</androidx.constraintlayout.widget.ConstraintLayout>